# Database (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# JWT Configuration
# Generate a secure random secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_ACCESS_EXPIRY="15m"  # 15 minutes
JWT_REFRESH_EXPIRY="30d" # 30 days

# CSRF Protection (REQUIRED)
# Generate a secure random secret: openssl rand -hex 32
CSRF_SECRET="your-csrf-secret-here-change-in-production"

# Email Provider (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY="re_..."
# Sender email address for OTP emails
AUTH_EMAIL_FROM="noreply@yourdomain.com"

# Rate Limiting (Upstash Redis - REQUIRED)
# Get from https://upstash.com
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="..."

# OAuth - Google (Optional)
# Get from https://console.cloud.google.com
GOOGLE_CLIENT_ID="..."
GOOGLE_CLIENT_SECRET="..."
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/oauth/google/callback"

# Frontend URL (for OAuth redirects)
FRONTEND_URL="http://localhost:5173"

# Backend URL (for CORS)
BACKEND_URL="http://localhost:3001"
